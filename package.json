{
  "name": "note-hive",
  "version": "1.0.0",
  "private": true,
  "packageManager": "npm@9.2.0",
  "repository": "https://github.com/gashon/note-hive",
  "license": "MIT",
  "npmScope": "@nifty",
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*"
    ]
  },
  "scripts": {
    "apps:build": "turbo run build",
    "apps:dev": "cross-env FORCE_COLOR=1 turbo run dev --parallel",
    "apps:start": "cross-env turbo run start --parallel",
    "apps:lint": "turbo run lint",
    "apps:format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "format:write": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,scss,md}\""
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-custom": "*",
    "prettier": "^2.7.1",
    "turbo": "latest",
    "cross-env": "7.0.3"
  },
  "engines": {
    "node": ">=16.15.0",
    "yarn": ">=1.22.0"
  }
}
