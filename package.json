{
  "name": "nifty",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@8.15.5",
  "repository": "https://github.com/gashon/nifty",
  "license": "MIT",
  "npmScope": "@nifty",
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*"
    ]
  },
  "scripts": {
    "test": "turbo run dev",
    "build": "dotenv -- turbo run build",
    "dev": "cross-env FORCE_COLOR=1 turbo run dev --parallel --verbosity 2",
    "start": "cross-env turbo run start --parallel",
    "lint": "turbo run lint",
    "format": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "format:write": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,scss,md}\""
  },
  "devDependencies": {
    "cross-env": "7.0.3",
    "dotenv-cli": "^7.4.1",
    "eslint": "^7.32.0",
    "eslint-config-custom": "*",
    "prettier": "^2.7.1"
  },
  "engines": {
    "node": ">=16.15.0",
    "yarn": ">=1.22.0"
  },
  "dependencies": {
    "turbo": "1.11.3"
  }
}
