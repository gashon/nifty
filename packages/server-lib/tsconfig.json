{
  "extends": "@nifty/tsconfig/base.json",
  "compilerOptions": {
    "lib": ["ES2019", "DOM"],
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": ".",
    "typeRoots": ["node_modules/@types", "lib/types"],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "common/*": ["../../common/src/*"]
    }
  },
  "exclude": ["node_modules", "**/.*"]
}
