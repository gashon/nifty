{
  "extends": "@nifty/tsconfig/react-library.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "lib": ["ES2019"],
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "../../",
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "@nifty/common/*": ["../common/src/*"],
      "@nifty/tsconfig/*": ["../tsconfig/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
