# if [ $? -eq 0 ]; then
#   echo "Nginx started successfully."
# else
#   echo "Failed to start Nginx."
#   exit 1
# fi

# # Setup doppler
# echo "Setting up Doppler..."
# ./setup_doppler.sh

# # Start all applications
# echo "Starting all applications..."
# yarn apps:start &

ls
