{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "lib": ["ES2019"],
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "src",
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "@/*": ["lib/*"]
    },
    "typeRoots": ["node_modules/@types", "lib/types", "src/types", "../shared/types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
