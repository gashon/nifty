{
  "extends": "@nifty/tsconfig/base.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "lib": ["ES2019"],
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "../../",
    "target": "es6",
    "typeRoots": [
      "node_modules/@types",
      "src/types",
      "../../packages/common/types"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@nifty/server-lib/*": ["../../packages/server-lib/src/*"],
      "@nifty/api/*": ["../api/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
